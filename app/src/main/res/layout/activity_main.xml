<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">


    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/main_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:id="@+id/activity_main_logo"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_loginButton"
        android:textSize="20sp"
        android:id="@+id/activity_main_login"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_below="@id/activity_main_logo"
        android:padding="10sp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:id="@+id/activity_main_signup"
        android:layout_below="@id/activity_main_login"
        android:padding="10sp"/>


</RelativeLayout>
