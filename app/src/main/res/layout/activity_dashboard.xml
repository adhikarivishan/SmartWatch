<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/layoutUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            app:backgroundTint="@color/colorEditTextLine"/>
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Select Date"
        android:id="@+id/tvDate"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_below="@id/layoutUser"/>


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/foot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:layout_below="@id/tvDate"
        android:id="@+id/foot"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/tvSteps"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_below="@id/foot"
        android:padding="5sp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/location"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="20sp"
        android:id="@+id/location"
        android:layout_below="@id/tvSteps"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/tvDistance"
        android:layout_below="@id/location"
        android:padding="5sp"/>

    <ImageView
        android:id="@+id/calories"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvSteps"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/cal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/tvCalories"
        android:layout_below="@id/calories"
        android:layout_marginLeft="100dp"
        android:padding="5sp"/>

    <ImageView
        android:id="@+id/heart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvSteps"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/heart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/tvHeartRate"
        android:layout_below="@id/heart"
        android:layout_marginLeft="200dp"
        android:padding="5sp"/>

    <ImageView
        android:id="@+id/floors"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvSteps"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/floors" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/tvFloors"
        android:layout_below="@id/floors"
        android:layout_marginLeft="300dp"
        android:padding="5sp"/>


</RelativeLayout>
